<?xml version="1.0"?>

<DataProviders
  xmlns="xervice:dataprovider-01"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="xervice:dataprovider-01 http://static.xervice.online/schema/dataprovider.schema.xsd"
>

    <DataProvider name="DockerConfigFile">
        <DataElement name="Path" type="string"/>
    </DataProvider>

    <DataProvider name="DockerConfigFileList">
        <DataElement name="Files" singleton="File" type="DockerConfigFile[]"/>
    </DataProvider>

    <DataProvider name="DockerConfig">
        <DataElement name="Environments" singleton="Environment" type="DockerConfigEnvironment[]"/>
    </DataProvider>

    <DataProvider name="DockerConfigEnvironment">
        <DataElement name="Name" type="string"/>
        <DataElement name="Type" type="string"/>
        <DataElement name="Context" type="array"/>
    </DataProvider>

</DataProviders>